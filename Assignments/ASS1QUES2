SELECT ACTOR.ACTOR_ID,CONCAT(ACTOR.FIRSTNAME,' ',ACTOR.SECONDNAME)AS ACTORNAME,
DIRECTOR.DIR_ID,DIRECTOR.DIR_NAME, COUNT(*)
FROM MOVIES
INNER JOIN MOV_ACT
ON MOV_ACT.MOVIE_ID=MOVIES.MOVIE_ID 
INNER JOIN ACTOR
ON ACTOR.ACTOR_ID=MOV_ACT.ACTOR_ID
INNER JOIN DIRECTOR 
ON MOVIES.DIR_ID=DIRECTOR.DIR_ID
GROUP BY DIRECTOR.DIR_ID,ACTOR.ACTOR_ID
HAVING COUNT(*)>1;
