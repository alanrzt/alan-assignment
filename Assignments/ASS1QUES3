SELECT GENRE.TITLE,SUM(IF(MOVIES.RELEASED=2016,1,0)) AS '2016',
SUM(IF(MOVIES.RELEASED=2015,1,0)) AS '2015',
SUM(IF(MOVIES.RELEASED=2014,1,0)) AS '2014',
SUM(IF(MOVIES.RELEASED=2013,1,0)) AS '2013',
SUM(IF(MOVIES.RELEASED=2012,1,0)) AS '2012',
SUM(IF(MOVIES.RELEASED=2011,1,0)) AS '2011'
FROM GENRE
LEFT JOIN MOVIES
ON MOVIES.GENRE_ID=GENRE.GENRE_ID
GROUP BY GENRE.TITLE; 

